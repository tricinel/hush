{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "src",
    "declaration": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "moduleResolution": "node"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
